<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WpfApp1.Resources.Style.Controls">


    <Style TargetType="{x:Type local:ApplicationBar}">
        <Setter Property="Background" Value="{DynamicResource Environment.ApplicationBarBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource Environment.ApplicationBarTextActive}"/>
        <!--<Setter Property="CloseButton.Background" Value="{DynamicResource Environment.ApplicationBarTextActive}"/>-->
    </Style>

    
</ResourceDictionary>