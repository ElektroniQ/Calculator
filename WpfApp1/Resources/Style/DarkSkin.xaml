<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:WpfApp1.Resources.Skins"
    >
    <!-- Common Style -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source=".\BaseSkin.xaml" />
    </ResourceDictionary.MergedDictionaries>
    
    <!-- Background Style -->
    <Style x:Key="styleBackground">
        <Setter Property="Control.Background">
            <Setter.Value>
                <SolidColorBrush Color="#FF2D2D30"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource TextBlock_Base}">
        <Setter Property="Foreground" Value="#FFFFFFFF"/>
    </Style>
